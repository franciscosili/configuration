# -*- mode: sh -*-
# zsh aliases

# ls
alias ll='ls -lh --group-directories-first --color=auto'
alias la='ls -lha --group-directories-first --color=auto'
alias l1='ls -1 --group-directories-first --color=auto '

# root
alias root='root -l'
alias rootq='root -q'

# clear
alias cl="clear"
# clear and ls
alias cla="clear; la"

# git
alias ga="git add ."
alias gs="git status"
alias gc="git commit -m"
alias gi="git init"
alias gp="git push -u"


# tar
alias tarc="tar -cvf"
alias tare="tar -xzvf"

# tmux
alias tm="tmux"
alias tma="tmux a -t"
alias tmn="tmux new -s"





# vim
alias vi="vim"



alias 'cd..'='cd_up'

# condor aliases
alias cs="condor_submit"
alias cq="condor_q"
alias cw="watch condor_q -nobatch"
alias cr="condor_rm"
