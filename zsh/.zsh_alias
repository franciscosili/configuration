# -*- mode: sh -*-
# zsh aliases

# ls
alias ll='exa -lh --color=always --group-directories-first'
alias la='exa -lha --color=always --group-directories-first'
alias l1='exa -1 --color=always --group-directories-first'
alias lt='exa -aT --color=always --group-directories-first'

# root
alias root='root -l'
alias rootq='root -q'

# clear
alias cl="clear"

# git
alias ga="git add ."
alias gs="git status"
alias gc="git commit -m"
alias gi="git init"
alias gp="git push -u"


# tar
alias tarc="tar -cvf"
alias tare="tar -xzvf"

# tmux
alias tm="tmux"

# vim
alias vi="vim"



alias 'cd..'='cd_up'


